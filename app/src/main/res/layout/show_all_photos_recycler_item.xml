<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/show_all_photos_recycler_item_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="200dp"

    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="3dp"

    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"

    android:layout_gravity="center"
    >

    <ProgressBar
        android:id="@+id/show_all_photos_recycler_item_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/show_all_photos_recycler_item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="20dp"

            />

        <TextView
            android:id="@+id/show_all_photos_recycler_item_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/show_all_photos_recycler_item_image"

            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"

            />

        <TextView
            android:id="@+id/show_all_photos_recycler_item_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/show_all_photos_recycler_item_title"
            app:layout_constraintStart_toEndOf="@+id/show_all_photos_recycler_item_image"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            android:text="@string/show_all_photos_recycler_item_string_id"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/show_all_photos_recycler_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/show_all_photos_recycler_item_title"
            app:layout_constraintStart_toEndOf="@+id/show_all_photos_recycler_item_id_textview"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/show_all_photos_recycler_item_album_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:layout_constraintStart_toEndOf="@+id/show_all_photos_recycler_item_image"
            app:layout_constraintTop_toBottomOf="@+id/show_all_photos_recycler_item_id_textview"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            android:text="@string/show_all_photos_recycler_item_string_album_id"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/show_all_photos_recycler_item_album_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toEndOf="@+id/show_all_photos_recycler_item_album_id_textview"
            app:layout_constraintTop_toBottomOf="@+id/show_all_photos_recycler_item_id_textview"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>