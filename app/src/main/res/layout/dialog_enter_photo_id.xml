<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_enter_photo_id_title"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/purple_200"
        android:gravity="start"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/dialog_enter_photo_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        >

        <Button
            android:id="@+id/dialog_enter_photo_id_button_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"

            android:text="@string/dialog_enter_photo_id_dismiss"
            android:textColor="@color/purple_200"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="end"
            />

        <Button
            android:id="@+id/dialog_enter_photo_id_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"

            android:text="@string/dialog_enter_photo_id_ok"
            android:textColor="@color/purple_200"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>